{
	"compilerOptions": {
		"module": "esNext",
		"esModuleInterop": true,
		"target": "es5",
		"moduleResolution": "node",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"watch": false
	},
	"files": [
		"src/index.ts"
	],
	// added to allow usage of javascript classes  
	"allowJs": true
}
